{
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd build && cmake .. && make -j8"

            // for cmake
            //"command": "cd build && make pro -j25"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ paddle_ocr",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/third_party/paddle_ocr/main/main.cpp",  // demo source code for paddle_ocr
                "-lopencv_core",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_highgui",
                "-lopencv_videoio",
                "-lopencv_freetype",
                "-lpaddle_ocr",  // generated already by build.sh
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "build demo code for paddle_ocr sub project"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ trt_vehicle",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/third_party/trt_vehicle/main/*.cpp",  // demo source code for trt_vehicle
                "-lopencv_core",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_highgui",
                "-lopencv_freetype",
                "-ltrt_vehicle",  // generated already by build.sh
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "build demo code for trt_vehicle sub project"
        }
    ],
    "version": "2.0.0"
}